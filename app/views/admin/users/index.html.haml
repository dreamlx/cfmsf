.row
  .span6
    %h3.title 用户管理
  .span3
    %h3
      = link_to '增加新用户', new_admin_user_path
%table
  %tr
    %th
    %th
    %th
  %table.table.center.table-bordered
    %thead
      %tr
        %td 用户名
        %td email
        %td 角色
        %td 操作
    %tbody
    - i = 0
    - @users.each do |user|
      - i += 1
      %tr{class: (i%2==0 ? "ligth_bule" : "mazarine")}
        %td= user.username
        %td= user.email
        %td= user.role
        %td
          = link_to t(:edit, scope: "crud"), edit_admin_user_path(user)
          - if current_user.id != user.id 
            = link_to t(:destroy, scope: "crud"), admin_user_path(user), :method => :delete, :data => { :confirm => '确定?' }


